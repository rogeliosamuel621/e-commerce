{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "target": "es5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "@Components/*": ["components/*"],
      "@Helpers/*": ["helpers/*"],
      "@Hooks/*": ["hooks/*"],
      "@Redux/*": ["redux/*"],
      "@Services/*": ["services/*"],
      "@Types/*": ["types/*"],
      "@Libs/*": ["libs/*"]
    }

  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
